<div class="col-md-3">
  <h2>User info</h2>
  <%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", size: '100x100' %>
  <table class="table">
    <tbody>
      <tr>
        <td>name</td>
        <td><%= user.name %></td>
      </tr>
	    <tr>
	      <td>introduction</td>
	      <td><%= user.introduction %></td>
	    </tr>
	  </tbody>
	</table>
  <div class="row">
    <%= link_to '', edit_user_path(user.id), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
  </div>
  <h2 class="mt-3">New book</h2>
  <%= form_with model: book, url: books_path, method: :post, local: true do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title,  class: "form-control book_title" %>
    </div>
    <div class="form-group">
      <label for="book_opinion">Option</label>
      <%= f.text_area :body, class: "form-control book_body", id: "book_body" %>
    </div>
    <div class="form-group">
      <%= f.submit 'Create Book', class: "btn btn-success" %>
    </div>
  <% end %>
</div>